<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

    <TextView
        android:id="@+id/tv_TitSplash4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/titsplash4"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_Splash4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_TitSplash4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_airplanemode_inactive_black_24dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="5dp"/>

    <TextView
        android:id="@+id/tv_DescSplash4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Splash4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/descsplash4"
        android:textAlignment="center"
        android:textColor="@color/intext2"
        android:textSize="20sp"/>
</RelativeLayout>